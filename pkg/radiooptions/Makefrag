OBJDIRS += pkg/radiooptions

RADIOOPTIONS_SRCFILES := radiooptions.c
RADIOOPTIONS_OBJFILES := $(patsubst %.c, $(OBJDIR)/pkg/radiooptions/%.o, $(RADIOOPTIONS_SRCFILES))

$(OBJDIR)/pkg/radiooptions/%.o: pkg/radiooptions/%.c
	@mkdir -p $(@D)
	$(CXX) $(USER_CXXFLAGS) -Werror -Wno-missing-noreturn -c -o $@ $<

$(OBJDIR)/user/radiooptions.debuginfo: $(RADIOOPTIONS_OBJFILES) $(LDEPS)
	$(CXX) -o $@ $(LDFLAGS) $(RADIOOPTIONS_OBJFILES)
