UCLIBC_ARCH := unknown

ifeq ($(ARCH),amd64)
UCLIBC_ARCH := x86_64
endif

ifeq ($(ARCH),i386)
UCLIBC_ARCH := i386
endif

UCLIBC_INCLUDES := \
	-I$(TOP)/pkg/uclibc/libc/sysdeps/jos64 \
	-I$(TOP)/pkg/uclibc/libc/sysdeps/linux/$(UCLIBC_ARCH) \
	-I$(TOP)/pkg/uclibc/libc/sysdeps/linux/common \
	-I$(TOP)/pkg/uclibc/include

USER_INC := $(UCLIBC_INCLUDES) $(USER_INC)

UCLIBC_CFLAGS   = $(USER_CFLAGS)   -D_LIBC
UCLIBC_CXXFLAGS = $(USER_CXXFLAGS) -D_LIBC

include pkg/uclibc/libc/Makefrag
include pkg/uclibc/libc/Makefrag.prof
include pkg/uclibc/libm/Makefrag
include pkg/uclibc/libcrypt/Makefrag
include pkg/uclibc/libutil/Makefrag
