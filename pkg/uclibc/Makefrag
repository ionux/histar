UCLIBC_INCLUDES := \
	-Ipkg/uclibc/libc/sysdeps/jos64 \
	-Ipkg/uclibc/libc/sysdeps/linux/x86_64 \
	-Ipkg/uclibc/libc/sysdeps/linux/common \
	-Ipkg/uclibc/include

UCLIBC_CFLAGS   := -nostdinc $(UCLIBC_INCLUDES) $(USER_CFLAGS)   -D_LIBC
UCLIBC_CXXFLAGS := -nostdinc $(UCLIBC_INCLUDES) $(USER_CXXFLAGS) -D_LIBC

USER_CFLAGS   := $(UCLIBC_INCLUDES) $(USER_CFLAGS)
USER_CXXFLAGS := $(UCLIBC_INCLUDES) $(USER_CXXFLAGS)

include pkg/uclibc/libc/Makefrag
