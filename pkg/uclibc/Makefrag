UCLIBC_INCLUDES := \
	-I$(TOP)/pkg/uclibc/libc/sysdeps/jos64 \
	-I$(TOP)/pkg/uclibc/libc/sysdeps/linux/x86_64 \
	-I$(TOP)/pkg/uclibc/libc/sysdeps/linux/common \
	-I$(TOP)/pkg/uclibc/include

UCLIBC_CFLAGS   := $(UCLIBC_INCLUDES) $(USER_CFLAGS)   -D_LIBC
UCLIBC_CXXFLAGS := $(UCLIBC_INCLUDES) $(USER_CXXFLAGS) -D_LIBC

USER_CFLAGS   := $(UCLIBC_INCLUDES) $(USER_CFLAGS)
USER_CXXFLAGS := $(UCLIBC_INCLUDES) $(USER_CXXFLAGS)
USER_INC      := $(UCLIBC_INCLUDES) $(USER_INC)

include pkg/uclibc/libc/Makefrag
include pkg/uclibc/libm/Makefrag
