UCLIBC_ARCH := unknown

ifeq ($(ARCH),amd64)
UCLIBC_ARCH := x86_64
endif

ifeq ($(ARCH),i386)
UCLIBC_ARCH := i386
endif

ifeq ($(ARCH),sparc)
UCLIBC_ARCH := sparc
endif

UCLIBC_INCLUDES := \
	-I$(TOP)/uinc \
	-I$(TOP)/pkg/uclibc/libc/sysdeps/linux/$(UCLIBC_ARCH) \
	-I$(TOP)/pkg/uclibc/libc/sysdeps/linux/common \
	-I$(TOP)/pkg/uclibc/include \
	-I$(TOP)/pkg/uclibc/libpthread/linuxthreads/sysdeps/pthread

USER_INC := $(UCLIBC_INCLUDES) $(USER_INC)

UCLIBC_COMFLAGS = -D_LIBC -include pkg/uclibc/include/libc-symbols.h # -fPIC -DSHARED
UCLIBC_CFLAGS   = $(UCLIBC_COMFLAGS) $(USER_CFLAGS)   $(CSTD)
UCLIBC_CXXFLAGS = $(UCLIBC_COMFLAGS) $(USER_CXXFLAGS)

include pkg/uclibc/libc/Makefrag
include pkg/uclibc/libc/Makefrag.prof
include pkg/uclibc/libm/Makefrag
include pkg/uclibc/libcrypt/Makefrag
include pkg/uclibc/libutil/Makefrag
include pkg/uclibc/ldso/ldso/Makefrag
