OBJDIRS += lib/vt

VT_LEXFILES := vtlex.yy
VT_SRCFILES := vt.c 

LIB_SRCFILES += lib/vt/vt.c	\
				lib/vt/vtlex.c

$(OBJDIR)/lib/vt/%.o: lib/vt/%.c
	@mkdir -p $(@D)
	$(CC) $(USER_CFLAGS) $(CSTD) -D_GNU_SOURCE -c -o $@ $<

$(OBJDIR)/lib/vt/%.o: lib/vt/%.yy
	$(LEX) -o $<.c $<
	@mkdir -p $(@D)
	$(CC) $(USER_CFLAGS) $(CSTD) -D_GNU_SOURCE -c -o $@ $<.c
