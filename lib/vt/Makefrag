OBJDIRS += lib/vt

LIB_SRCFILES += lib/vt/vt.c lib/vt/vtlex.yy.c

$(OBJDIR)/lib/vt/%.o: lib/vt/%.c
	@mkdir -p $(@D)
	$(CC) $(USER_CFLAGS) $(CSTD) -D_GNU_SOURCE -c -o $@ $<

$(OBJDIR)/lib/vt/vtlex.yy.c: lib/vt/vtlex.yy
	@mkdir -p $(@D)
	$(LEX) -o$(OBJDIR)/lib/vt/vtlex.yy.c lib/vt/vtlex.yy

$(OBJDIR)/lib/vt/vtlex.yy.o: $(OBJDIR)/lib/vt/vtlex.yy.c
	@mkdir -p $(@D)
	$(CC) $(USER_CFLAGS) $(CSTD) -D_GNU_SOURCE -c -o $@ $<

